# Базовые настройки бота
BOT_TOKEN=your_bot_token_here
ADMIN_IDS=your_admin_id_here

# Настройки OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-mini

# Промпты для генерации ответов
TAROT_PROMPT_RU=Ты - опытный таролог, работающий с картами Таро Райдера-Уэйта...
TAROT_PROMPT_EN=You are an experienced tarot reader working with Rider-Waite Tarot cards...

# Настройки базы данных
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/tarot_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=tarot_bot

# Настройки Redis
REDIS_URL=redis://redis:6379/0

# Настройки Robokassa
ROBOKASSA_LOGIN=your_robokassa_login
ROBOKASSA_PASSWORD1=your_robokassa_password1
ROBOKASSA_PASSWORD2=your_robokassa_password2
ROBOKASSA_TEST_MODE=True

# Настройки тарифов
TARIFF_SMALL_PRICE=99
TARIFF_SMALL_READINGS=3
TARIFF_SMALL_DURATION=30

TARIFF_MEDIUM_PRICE=199
TARIFF_MEDIUM_READINGS=10
TARIFF_MEDIUM_DURATION=30

TARIFF_UNLIMITED_PRICE=299
TARIFF_UNLIMITED_DURATION=30

# Настройки локализации
DEFAULT_LANGUAGE=ru
SUPPORTED_LANGUAGES=ru,en

# WebApp settings
WEBAPP_URL=http://localhost:8000

# Настройки Таро
TAROT_READINGS_PER_DAY=3
TAROT_READING_PRICE=100

# Настройки ngrok
NGROK_AUTH_TOKEN=your_ngrok_auth_token 